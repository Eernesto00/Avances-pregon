<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    android:background="@drawable/textura"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/carterone"
            android:text="INFORMACÍON"
            android:textColor="@color/amabase"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="409dp"
            android:layout_height="621dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <GridLayout
                android:rowCount="2"
                android:columnCount="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="12dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    >

                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="28dp"
                        android:fontFamily="@font/carterone"
                        android:text="Informacion Rapida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_margin="15dp"
                        />

                    <TextView
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/carterone"
                        android:text="Ubicacíon: Carrera 11# 6-38 al lado
                        de la casa campesina"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                     <ImageView
                         android:src="@drawable/negocio"
                         android:layout_width="363dp"
                         android:layout_height="363dp"
                         android:layout_marginBottom="12dp"/>
                 </LinearLayout>

             </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/white"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="25dp"
                            android:fontFamily="@font/carterone"
                            android:text="Informacíon Propietario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_margin="15dp"
                            />

                        <TextView
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/carterone"
                            android:text="Nombre: Alirio Cubillos Martinez"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/carterone"
                            android:text="Celular: 3133812965"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:src="@drawable/d"
                            android:layout_width="363dp"
                            android:layout_height="363dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginBottom="12dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/carterone"
                            android:text="'Pienso que para mantener un negocio no es necesario tener precios descomunales, y que tener precios bajos no quiere decir que su calidad lo sea, y esto es justo lo que demuestro con mi local'"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>
            </ScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>


