<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agregar1"
    android:background="@drawable/textura"
    android:padding="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carterone"
        android:text="AGREGAR PRODUCTOS"
        android:textAlignment="center"
        android:textColor="@color/amabase"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="160dp"
            >


            <TextView
                android:id="@+id/productoview"
                android:fontFamily="@font/carterone"
                android:textSize="30dp"
                android:textColor="@color/amabase"
                android:paddingLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRODUCTO" />

            <EditText
                android:id="@+id/edtproducto"
                android:textColor="@color/black"
                android:fontFamily="@font/carterone"
                android:background="@color/white"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Plato sopero"
                android:layout_marginBottom="50dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:id="@+id/precioview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRECIO"
                android:textSize="30dp"
                android:fontFamily="@font/carterone"
                android:textColor="@color/amabase"/>

            <EditText
                android:id="@+id/edtprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="$ 5.000"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/carterone"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="40dp"/>

            <Button
                android:id="@+id/btnalmacenar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/amabase"
                android:elevation="11dp"
                android:fontFamily="@font/carterone"
                android:onClick="almacenar"
                android:text="GUARDAR"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/consultar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/amabase"
                android:elevation="11dp"
                android:fontFamily="@font/carterone"
                android:onClick="consultar"
                android:text="CONSULTAR"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/salir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/amabase"
                android:elevation="11dp"
                android:fontFamily="@font/carterone"
                android:onClick="volver1"
                android:text="VOLVER"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </LinearLayout>
</LinearLayout>