<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura"
    tools:context=".Ofertas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/atras"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/amabase"
            android:onClick="atras1"
            app:srcCompat="@drawable/ic_regresar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txtofertas"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carterone"
                android:text="OFERTAS"
                android:textColor="@color/amabase"
                android:textSize="45sp"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:columnCount="5"
                android:rowCount="5"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="30dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                        android:fontFamily="@font/carterone"
                        android:textSize="20dp"
                        android:text="¡¡PROMOCION DE MADERA!!"
                        android:paddingTop="5dp"
                        android:background="@color/amabase"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Combo de 'Cuchara de madera-Bolinillo de madera y Mortero'"
                            android:fontFamily="@font/carterone"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/cuchara_madera_grande"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp"
                                    android:src="@drawable/bolinillo"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp"
                                    android:src="@drawable/mortero"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:backgroundTint="@color/white"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="30dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:fontFamily="@font/carterone"
                            android:textSize="20dp"
                            android:text="¡¡PROMOCION DE PASTICO!!"
                            android:paddingTop="5dp"
                            android:background="@color/amabase"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Combo de 'Termo- Canasta- Porta y Jarra de plastico'"
                            android:fontFamily="@font/carterone"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:padding="15dp"
                                android:layout_width="170dp"
                                android:layout_height="200dp"
                                android:src="@drawable/termo"/>

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="200dp"
                                android:padding="25dp"
                                android:src="@drawable/canasta_plastica"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="200dp"
                                android:padding="25dp"
                                android:src="@drawable/porta"/>

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="200dp"
                                android:padding="25dp"
                                android:src="@drawable/jarra_jugo"/>
                        </LinearLayout>
                    </LinearLayout>



                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:backgroundTint="@color/white"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="30dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:fontFamily="@font/carterone"
                            android:textSize="20dp"
                            android:text="¡¡PROMOCION DE PASTELERO!!"
                            android:paddingTop="5dp"
                            android:background="@color/amabase"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Combo de 'Molde mediano- Molde pequeño y Cuchara de madera y Bolinillo'"
                            android:fontFamily="@font/carterone"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="200dp"
                                android:padding="15dp"
                                android:src="@drawable/molde_medium"/>

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="200dp"
                                android:padding="25dp"
                                android:src="@drawable/molde_small"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="170dp"
                                android:padding="20dp"
                                android:layout_height="200dp"
                                android:src="@drawable/cuchara_madera_grande"/>

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="200dp"
                                android:padding="20dp"
                                android:src="@drawable/bolinillo"/>
                        </LinearLayout>



                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </GridLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>