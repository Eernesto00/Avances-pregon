<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura"
    tools:context=".Registro">

    <ImageButton
        android:id="@+id/atras"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/amabase"
        android:onClick="atras1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/ic_regresar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carterone"
        android:text="Registro"
        android:textAlignment="center"
        android:textColor="@color/amabase"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="594dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:fontFamily="@font/carterone"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/passwordeditText"
            android:hint="ContraseÃ±a"
            android:textColorHint="@color/black"
            android:fontFamily="@font/carterone"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/singUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:fontFamily="@font/carterone"
            android:backgroundTint="@color/amabase"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true"
            />


        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:fontFamily="@font/carterone"
            android:backgroundTint="@color/amabase"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAllCaps="true"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>